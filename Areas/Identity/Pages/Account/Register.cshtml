@page
@model RegisterModel
@{
    ViewData["Title"] = "Welcome To Sips";
}
<script src='https://www.google.com/recaptcha/api.js'></script>


<div class="sip-reg-container">
     <h1>@ViewData["Title"]</h1> 
<p>Register to get started</p>
    <div>
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            
            <div class ="sip-reg">
                <div class="form-floating mb-3">
                    <input asp-for="Input.FirstName" class="form-control"  aria-required="true" placeholder="First Name" />
                    <label asp-for="Input.FirstName"></label>
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LastName" class="form-control"  aria-required="true" placeholder="Last Name" />
                    <label asp-for="Input.LastName"></label>
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PhoneNumber" class="form-control"  aria-required="true" placeholder="Phone Number" />
                    <label asp-for="Input.PhoneNumber"></label>
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Birthday" class="form-control"  aria-required="true" placeholder="Birthday" />
                    <label asp-for="Input.Birthday"></label>
                    <span asp-validation-for="Input.Birthday" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Street" class="form-control" aria-required="true" placeholder="Street" />
                    <label asp-for="Input.Street"></label>
                    <span asp-validation-for="Input.Street" class="text-danger"></span>
                </div>
            </div>
            
            <div class ="sip-reg">
                <div class="form-floating mb-3">
                    <input asp-for="Input.UnitNumber" class="form-control"  aria-required="true" placeholder="Unit Number" />
                    <label asp-for="Input.UnitNumber"></label>
                    <span asp-validation-for="Input.UnitNumber" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.City" class="form-control"  aria-required="true" placeholder="City" />
                    <label asp-for="Input.City"></label>
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Province" class="form-control"  aria-required="true" placeholder="Province" />
                    <label asp-for="Input.Province"></label>
                    <span asp-validation-for="Input.Province" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.PostalCode" class="form-control" aria-required="true" placeholder="Postal Code" />
                    <label asp-for="Input.PostalCode"></label>
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>
            
            <div class="sip-reg">
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control"  aria-required="true" placeholder="Email" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control"  aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control"  aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="g-recaptcha" data-sitekey='@ViewData["SiteKey"]'></div><br />

                <button id="registerSubmit" type="submit" class="btn btn-lg btn-primary">Register</button>
            </div>
            
        </form>
    </div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
